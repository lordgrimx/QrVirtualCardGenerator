# Database Configuration
DATABASE_URL=postgresql://qruser:your_password_here@localhost:5432/qrvirtualcard

# Security Keys
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Environment
ENVIRONMENT=production
DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Admin User (First time setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password
ADMIN_EMAIL=admin@yourdomain.com

# NFC Configuration (Optional)
NFC_ENABLED=true

# Session Configuration
SESSION_TIMEOUT=3600

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/var/www/qrvirtualcard/backend/uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/www/qrvirtualcard/backend/logs/app.log

