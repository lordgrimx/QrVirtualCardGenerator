<?xml version = "1.0" encoding = "UTF-8" ?>
<Application x:Class="MauiNfcApp.App"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiNfcApp"
             xmlns:converters="clr-namespace:MauiNfcApp.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:BoolToYesNoConverter x:Key="BoolToYesNoConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:BoolToReadButtonTextConverter x:Key="BoolToReadButtonTextConverter" />
            <converters:StringToHasValueConverter x:Key="StringToHasValueConverter" />
            <converters:ObjectToBoolConverter x:Key="ObjectToBoolConverter" />
            <converters:BoolToVerificationColorConverter x:Key="BoolToVerificationColorConverter" />
            <converters:BoolToVerificationTextConverter x:Key="BoolToVerificationTextConverter" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
