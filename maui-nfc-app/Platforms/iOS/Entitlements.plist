<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- NFC Reading Entitlement -->
    <key>com.apple.developer.nfc.readersession.formats</key>
    <array>
        <!-- NDEF format desteği -->
        <string>NDEF</string>
        <!-- ISO7816 smart cards desteği -->
        <string>TAG</string>
    </array>
    
    <!-- Application Groups (isteğe bağlı - data sharing için) -->
    <key>com.apple.security.application-groups</key>
    <array>
        <string>group.com.qrvirtualcard.nfcreader</string>
    </array>
    
    <!-- Keychain Access Groups (güvenli depolama için) -->
    <key>keychain-access-groups</key>
    <array>
        <string>$(AppIdentifierPrefix)com.qrvirtualcard.nfcreader</string>
    </array>
</dict>
</plist>
