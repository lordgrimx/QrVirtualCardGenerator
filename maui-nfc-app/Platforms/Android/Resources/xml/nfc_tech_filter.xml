<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- NFC Technology Filter - Desteklenen tag teknolojileri -->
    <tech-list>
        <!-- NDEF destekli taglar -->
        <tech>android.nfc.tech.Ndef</tech>
    </tech-list>
    
    <tech-list>
        <!-- NDEF formatlanabilir taglar -->
        <tech>android.nfc.tech.NdefFormatable</tech>
    </tech-list>
    
    <tech-list>
        <!-- NFC-A teknolojisi (ISO 14443 Type A) -->
        <tech>android.nfc.tech.NfcA</tech>
    </tech-list>
    
    <tech-list>
        <!-- NFC-B teknolojisi (ISO 14443 Type B) -->
        <tech>android.nfc.tech.NfcB</tech>
    </tech-list>
    
    <tech-list>
        <!-- NFC-F teknolojisi (JIS 6319-4) -->
        <tech>android.nfc.tech.NfcF</tech>
    </tech-list>
    
    <tech-list>
        <!-- NFC-V teknolojisi (ISO 15693) -->
        <tech>android.nfc.tech.NfcV</tech>
    </tech-list>
    
    <tech-list>
        <!-- MIFARE Classic -->
        <tech>android.nfc.tech.MifareClassic</tech>
    </tech-list>
    
    <tech-list>
        <!-- MIFARE Ultralight -->
        <tech>android.nfc.tech.MifareUltralight</tech>
    </tech-list>
</resources>
