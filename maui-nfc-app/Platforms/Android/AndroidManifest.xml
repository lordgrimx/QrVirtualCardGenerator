<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NFC İzinleri -->
    <uses-permission android:name="android.permission.NFC" />
    
    <!-- NFC özelliği gerekli -->
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <!-- Internet izni (backend API'si için) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Vibration izni (NFC feedback için) -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application 
        android:allowBackup="true" 
        android:icon="@mipmap/appicon" 
        android:supportsRtl="true">
        
        <!-- NFC Intent Filter - NDEF mesajları için -->
        <activity 
            android:name="com.companyname.mauinfcapp.MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Maui.SplashTheme">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- NFC NDEF Discovery Intent Filter -->
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- Text MIME type için -->
                <data android:mimeType="text/plain" />
            </intent-filter>

            <!-- NFC Tag Discovery Intent Filter -->
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- NFC Tech Discovery Intent Filter -->
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <meta-data 
                    android:name="android.nfc.action.TECH_DISCOVERED"
                    android:resource="@xml/nfc_tech_filter" />
            </intent-filter>

        </activity>
    </application>

</manifest>
