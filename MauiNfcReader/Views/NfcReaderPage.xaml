                    </VerticalStackLayout.IsVisible>
                
                <!-- NFC Writing Card -->
                <Frame BackgroundColor="White" 
                       Padding="24" 
                       HasShadow="True" 
                       CornerRadius="16"
                       Opacity="0.98">
                    <VerticalStackLayout Spacing="20">
                        
