                       Opacity="0.98">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="âš™ï¸ HÄ±zlÄ± Ayarlar" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="#111827" />
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Column="0" 
