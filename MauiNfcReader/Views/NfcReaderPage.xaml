                        </VerticalStackLayout>
                        
                        <!-- Action Buttons -->
                        <VerticalStackLayout Spacing="12">
                            <Button x:Name="StartReadingBtn"
                                    Text="ðŸ“¡ Okumaya BaÅŸla"
