                                    <GradientStop Color="#7C2D12" Offset="0.0" />
                                    <GradientStop Color="#92400E" Offset="1.0" />
                                </LinearGradientBrush>
                            </Button.Background>
                            <Button.TextColor>White</Button.TextColor>
                        </Button>

                        <!-- Warning if not connected -->
                        <Frame BackgroundColor="#FEF3C7" 
                               Padding="12" 
                               CornerRadius="12"
                               HasShadow="False"
