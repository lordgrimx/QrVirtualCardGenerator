<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiNfcReader.Views.ProfilePage"
             Title="Profil"
             BackgroundColor="#F9FAFB">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="24">
            
            <!-- Profile Header -->
            <Frame BackgroundColor="White" 
                   Padding="24" 
                   HasShadow="True" 
                   CornerRadius="16">
                <VerticalStackLayout Spacing="16">
                    
                    <!-- Avatar -->
                    <Frame BackgroundColor="#7C2D12" 
                           WidthRequest="100" 
                           HeightRequest="100" 
                           CornerRadius="50" 
                           Padding="0"
                           HasShadow="True"
                           HorizontalOptions="Center">
                        <Label Text="👤" 
                               FontSize="48" 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Frame>

                    <!-- User Info -->
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <Label x:Name="UserNameLabel"
                               Text="Kullanıcı Adı" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               TextColor="#111827"
                               HorizontalOptions="Center" />
                        <Label x:Name="UserRoleLabel"
                               Text="NFC Okuyucu Operatörü" 
                               FontSize="16" 
                               TextColor="#6B7280"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>

                    <!-- Stats -->
                    <Grid ColumnSpacing="12" Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                            <Label x:Name="TotalScansLabel"
                                   Text="0" 
                                   FontSize="24" 
                                   FontAttributes="Bold" 
                                   TextColor="#7C2D12"
                                   HorizontalOptions="Center" />
                            <Label Text="Toplam Okuma" 
                                   FontSize="12" 
                                   TextColor="#6B7280"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1" Spacing="4">
                            <Label x:Name="TodayScansLabel"
                                   Text="0" 
                                   FontSize="24" 
                                   FontAttributes="Bold" 
                                   TextColor="#10B981"
                                   HorizontalOptions="Center" />
                            <Label Text="Bugün" 
                                   FontSize="12" 
                                   TextColor="#6B7280"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="2" Spacing="4">
                            <Label x:Name="SuccessRateLabel"
                                   Text="100%" 
                                   FontSize="24" 
                                   FontAttributes="Bold" 
                                   TextColor="#3B82F6"
                                   HorizontalOptions="Center" />
                            <Label Text="Başarı Oranı" 
                                   FontSize="12" 
                                   TextColor="#6B7280"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Profile Details -->
            <Frame BackgroundColor="White" 
                   Padding="20" 
                   HasShadow="True" 
                   CornerRadius="16">
                <VerticalStackLayout Spacing="16">
                    <Label Text="👤 Profil Bilgileri" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="#111827" />
                    
                    <!-- Username -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Kullanıcı Adı" 
                               FontSize="14" 
                               TextColor="#6B7280" />
                        <Entry x:Name="UsernameEntry"
                               Placeholder="Kullanıcı adınız"
                               FontSize="14"
                               BackgroundColor="#F9FAFB"
                               TextColor="#111827" />
                    </VerticalStackLayout>

                    <!-- Email -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="E-posta" 
                               FontSize="14" 
                               TextColor="#6B7280" />
                        <Entry x:Name="EmailEntry"
                               Placeholder="email@example.com"
                               Keyboard="Email"
                               FontSize="14"
                               BackgroundColor="#F9FAFB"
                               TextColor="#111827" />
                    </VerticalStackLayout>

                    <!-- Phone -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Telefon" 
                               FontSize="14" 
                               TextColor="#6B7280" />
                        <Entry x:Name="PhoneEntry"
                               Placeholder="+90 XXX XXX XX XX"
                               Keyboard="Telephone"
                               FontSize="14"
                               BackgroundColor="#F9FAFB"
                               TextColor="#111827" />
                    </VerticalStackLayout>

                    <Button Text="Profili Güncelle"
                            FontSize="16"
                            FontAttributes="Bold"
                            BackgroundColor="#7C2D12"
                            TextColor="White"
                            CornerRadius="12"
                            HeightRequest="48"
                            Clicked="OnUpdateProfileClicked" />
                </VerticalStackLayout>
            </Frame>

            <!-- Activity Log -->
            <Frame BackgroundColor="White" 
                   Padding="20" 
                   HasShadow="True" 
                   CornerRadius="16">
                <VerticalStackLayout Spacing="16">
                    <Label Text="📊 Son Aktiviteler" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="#111827" />
                    
                    <VerticalStackLayout Spacing="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Frame Grid.Column="0" 
                                   BackgroundColor="#10B981" 
                                   WidthRequest="32" 
                                   HeightRequest="32" 
                                   CornerRadius="16" 
                                   Padding="0"
                                   HasShadow="False">
                                <Label Text="✓" 
                                       FontSize="16" 
                                       TextColor="White"
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center" />
                            </Frame>
                            
                            <VerticalStackLayout Grid.Column="1" Spacing="2" Margin="12,0,0,0">
                                <Label Text="NFC Okuma Başarılı" 
                                       FontSize="14" 
                                       FontAttributes="Bold"
                                       TextColor="#111827" />
                                <Label Text="Üye #12345 doğrulandı" 
                                       FontSize="12" 
                                       TextColor="#6B7280" />
                            </VerticalStackLayout>
                            
                            <Label Grid.Column="2" 
                                   Text="Az önce" 
                                   FontSize="12" 
                                   TextColor="#9CA3AF"
                                   VerticalOptions="Center" />
                        </Grid>

                        <BoxView HeightRequest="1" Color="#E5E7EB" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Frame Grid.Column="0" 
                                   BackgroundColor="#3B82F6" 
                                   WidthRequest="32" 
                                   HeightRequest="32" 
                                   CornerRadius="16" 
                                   Padding="0"
                                   HasShadow="False">
                                <Label Text="🔍" 
                                       FontSize="16"
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center" />
                            </Frame>
                            
                            <VerticalStackLayout Grid.Column="1" Spacing="2" Margin="12,0,0,0">
                                <Label Text="Üye Araması" 
                                       FontSize="14" 
                                       FontAttributes="Bold"
                                       TextColor="#111827" />
                                <Label Text="3 üye bulundu" 
                                       FontSize="12" 
                                       TextColor="#6B7280" />
                            </VerticalStackLayout>
                            
                            <Label Grid.Column="2" 
                                   Text="5 dk önce" 
                                   FontSize="12" 
                                   TextColor="#9CA3AF"
                                   VerticalOptions="Center" />
                        </Grid>

                        <BoxView HeightRequest="1" Color="#E5E7EB" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Frame Grid.Column="0" 
                                   BackgroundColor="#7C2D12" 
                                   WidthRequest="32" 
                                   HeightRequest="32" 
                                   CornerRadius="16" 
                                   Padding="0"
                                   HasShadow="False">
                                <Label Text="🔄" 
                                       FontSize="16"
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center" />
                            </Frame>
                            
                            <VerticalStackLayout Grid.Column="1" Spacing="2" Margin="12,0,0,0">
                                <Label Text="Backend Bağlantısı" 
                                       FontSize="14" 
                                       FontAttributes="Bold"
                                       TextColor="#111827" />
                                <Label Text="Başarıyla bağlanıldı" 
                                       FontSize="12" 
                                       TextColor="#6B7280" />
                            </VerticalStackLayout>
                            
                            <Label Grid.Column="2" 
                                   Text="10 dk önce" 
                                   FontSize="12" 
                                   TextColor="#9CA3AF"
                                   VerticalOptions="Center" />
                        </Grid>
                    </VerticalStackLayout>

                    <Button Text="Tüm Geçmişi Görüntüle"
                            FontSize="14"
                            BackgroundColor="#F3F4F6"
                            TextColor="#111827"
                            CornerRadius="12"
                            Clicked="OnViewHistoryClicked" />
                </VerticalStackLayout>
            </Frame>

            <!-- Logout Button -->
            <Button Text="🚪 Çıkış Yap"
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="#FEE2E2"
                    TextColor="#DC2626"
                    CornerRadius="12"
                    HeightRequest="48"
                    Clicked="OnLogoutClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

