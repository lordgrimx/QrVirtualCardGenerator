<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:views="clr-namespace:MauiNfcReader.Views"
               x:Class="MauiNfcReader.Views.MemberInfoPopup"
               x:DataType="views:MemberInfoPopupViewModel"
               CanBeDismissedByTappingOutsideOfPopup="True">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12" WidthRequest="350">
            <Label Text="Üye Bilgileri" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center"/>
            
            <!-- Temel Bilgiler -->
            <Frame BackgroundColor="LightBlue" Padding="12" CornerRadius="8">
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="8" RowSpacing="6">
                    <Label Grid.Row="0" Grid.Column="0" Text="Durum:" FontAttributes="Bold"/>
                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Status}"/>

                    <Label Grid.Row="1" Grid.Column="0" Text="Ad:" FontAttributes="Bold"/>
                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding Name}"/>

                    <Label Grid.Row="2" Grid.Column="0" Text="Üyelik ID:" FontAttributes="Bold"/>
                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding MembershipId}"/>

                    <Label Grid.Row="3" Grid.Column="0" Text="Üye ID:" FontAttributes="Bold"/>
                    <Label Grid.Row="3" Grid.Column="1" Text="{Binding MemberId}"/>

                    <Label Grid.Row="4" Grid.Column="0" Text="Doğrulama:" FontAttributes="Bold"/>
                    <Label Grid.Row="4" Grid.Column="1" Text="{Binding ModeWithDatabase}"/>

                    <Label Grid.Row="5" Grid.Column="0" Text="Geçerlilik:" FontAttributes="Bold"/>
                    <Label Grid.Row="5" Grid.Column="1" Text="{Binding ValidText}"/>
                </Grid>
            </Frame>
            
            <!-- Ek Bilgiler (sadece varsa göster) -->
            <Frame BackgroundColor="LightGreen" Padding="12" CornerRadius="8" IsVisible="{Binding HasExtendedInfo}">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Detay Bilgiler" FontAttributes="Bold" FontSize="16"/>
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" RowSpacing="4">
                        <!-- Email -->
                        <Label Grid.Row="0" Grid.Column="0" Text="Email:" FontAttributes="Bold" 
                               IsVisible="{Binding HasEmail}"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding Email}" 
                               IsVisible="{Binding HasEmail}"/>
                        
                        <!-- Phone -->
                        <Label Grid.Row="1" Grid.Column="0" Text="Telefon:" FontAttributes="Bold" 
                               IsVisible="{Binding HasPhoneNumber}"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding PhoneNumber}" 
                               IsVisible="{Binding HasPhoneNumber}"/>
                        
                        <!-- Role -->
                        <Label Grid.Row="2" Grid.Column="0" Text="Rol:" FontAttributes="Bold" 
                               IsVisible="{Binding HasRole}"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding Role}" 
                               IsVisible="{Binding HasRole}"/>
                        
                        <!-- Membership Type -->
                        <Label Grid.Row="3" Grid.Column="0" Text="Üyelik Tipi:" FontAttributes="Bold" 
                               IsVisible="{Binding HasMembershipType}"/>
                        <Label Grid.Row="3" Grid.Column="1" Text="{Binding MembershipType}" 
                               IsVisible="{Binding HasMembershipType}"/>
                        
                        <!-- Expiration Date -->
                        <Label Grid.Row="4" Grid.Column="0" Text="Son Geçerlilik:" FontAttributes="Bold" 
                               IsVisible="{Binding HasExpirationDate}"/>
                        <Label Grid.Row="4" Grid.Column="1" Text="{Binding ExpirationDate}" 
                               IsVisible="{Binding HasExpirationDate}"/>
                        
                        <!-- Join Date -->
                        <Label Grid.Row="5" Grid.Column="0" Text="Üyelik Tarihi:" FontAttributes="Bold" 
                               IsVisible="{Binding HasJoinDate}"/>
                        <Label Grid.Row="5" Grid.Column="1" Text="{Binding JoinDate}" 
                               IsVisible="{Binding HasJoinDate}"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Doğrulama Zamanı -->
            <Label Text="{Binding VerificationTime, StringFormat='Doğrulama: {0}'}" 
                   FontSize="12" TextColor="Gray" HorizontalOptions="Center"
                   IsVisible="{Binding HasVerificationTime}"/>
            
            <Button Text="Kapat" Clicked="OnCloseClicked" BackgroundColor="DodgerBlue" TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
</toolkit:Popup>


