<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:views="clr-namespace:MauiNfcReader.Views"
               x:Class="MauiNfcReader.Views.MemberInfoPopup"
               x:DataType="views:MemberInfoPopupViewModel"
               CanBeDismissedByTappingOutsideOfPopup="True">
    <VerticalStackLayout Padding="20" Spacing="12" WidthRequest="320">
        <Label Text="Üye Bilgileri" FontAttributes="Bold" FontSize="18"/>
        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="8" RowSpacing="6">
            <Label Grid.Row="0" Grid.Column="0" Text="Durum:" FontAttributes="Bold"/>
            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Status}"/>

            <Label Grid.Row="1" Grid.Column="0" Text="Ad:" FontAttributes="Bold"/>
            <Label Grid.Row="1" Grid.Column="1" Text="{Binding Name}"/>

            <Label Grid.Row="2" Grid.Column="0" Text="Üyelik ID:" FontAttributes="Bold"/>
            <Label Grid.Row="2" Grid.Column="1" Text="{Binding MembershipId}"/>

            <Label Grid.Row="3" Grid.Column="0" Text="Üye ID:" FontAttributes="Bold"/>
            <Label Grid.Row="3" Grid.Column="1" Text="{Binding MemberId}"/>

            <Label Grid.Row="4" Grid.Column="0" Text="Doğrulama:" FontAttributes="Bold"/>
            <Label Grid.Row="4" Grid.Column="1" Text="{Binding Mode}"/>

            <Label Grid.Row="5" Grid.Column="0" Text="Geçerlilik:" FontAttributes="Bold"/>
            <Label Grid.Row="5" Grid.Column="1" Text="{Binding ValidText}"/>
        </Grid>
        <Button Text="Kapat" Clicked="OnCloseClicked"/>
    </VerticalStackLayout>
</toolkit:Popup>


