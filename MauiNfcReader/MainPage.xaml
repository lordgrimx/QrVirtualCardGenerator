<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiNfcReader.MainPage"
             Title=""
             BackgroundColor="#FEF2F2">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Background Gradient -->
        <Rectangle Grid.RowSpan="2">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FEF2F2" Offset="0.0" />
                    <GradientStop Color="#FFF7ED" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Ana İçerik -->
        <ScrollView Grid.Row="0" Padding="16">
            <VerticalStackLayout Spacing="20">
                
                <!-- Header with ELFED Logo -->
                <Frame BackgroundColor="White" 
                       Padding="20,16" 
                       HasShadow="True" 
                       CornerRadius="16"
                       Opacity="0.9">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- ELFED Logo -->
                        <Image Grid.Column="0"
                               Source="elfedlogo.png"
                               WidthRequest="50"
                               HeightRequest="50"
                               Aspect="AspectFit"
                               VerticalOptions="Center"
                               Margin="0,0,12,0"/>
                        
                        <!-- Header Text -->
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label FontSize="24" 
                                   FontAttributes="Bold" 
                                   HorizontalOptions="Start">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="ELFED " TextColor="#DC2626"/>
                                        <Span Text="NFC Okuyucu" TextColor="#111827"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label Text="Elazığ Dernekler Federasyonu" 
                                   FontSize="14" 
                                   TextColor="#6B7280" 
                                   HorizontalOptions="Start" />
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Status Card -->
                <Frame BackgroundColor="White" 
                       Padding="20" 
                       HasShadow="True" 
                       CornerRadius="16"
                       Opacity="0.9">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Bağlantı Durumu" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="#111827" />
                        
                        <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                            <BoxView x:Name="BackendStatusDot" 
                                     WidthRequest="16" 
                                     HeightRequest="16" 
                                     CornerRadius="8" 
                                     Color="#EF4444" />
                            <Label x:Name="BackendStatusText" 
                                   Text="Backend bağlantısı kontrol ediliyor..." 
                                   FontSize="14" 
                                   TextColor="#374151" />
                            <Button x:Name="RecycleBtn"
                                    Text="🔄"
                                    FontSize="16"
                                    BackgroundColor="Transparent"
                                    TextColor="#6B7280"
                                    Padding="8"
                                    CornerRadius="8"
                                    Clicked="OnRecycleBackendClicked"
                                    ToolTipProperties.Text="Backend'e yeniden bağlan" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Action Buttons -->
                <VerticalStackLayout Spacing="12">
                    
                    <!-- Connect Backend Button -->
                    <Button x:Name="ConnectBackendBtn"
                            Text="Backend'e Bağlan"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="56"
                            CornerRadius="16"
                            Clicked="OnConnectBackendClicked"
                            HorizontalOptions="Fill">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#DC2626" Offset="0.0" />
                                <GradientStop Color="#EA580C" Offset="1.0" />
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.TextColor>White</Button.TextColor>
                    </Button>

                    <!-- Start NFC Reader Button -->
                    <Button x:Name="StartNfcBtn"
                            FontSize="16"
                            FontAttributes="Bold"
                            BackgroundColor="White"
                            TextColor="#111827"
                            HeightRequest="56"
                            CornerRadius="16"
                            Clicked="OnStartClicked"
                            HorizontalOptions="Fill"
                            BorderColor="#E5E7EB"
                            BorderWidth="1">
                        <Button.Text>📡 NFC Okuyucuyu Başlat</Button.Text>
                    </Button>
                    
                </VerticalStackLayout>

                <!-- Features Card -->
                <Frame BackgroundColor="White" 
                       Padding="20" 
                       HasShadow="True" 
                       CornerRadius="16"
                       Opacity="0.9">
                    <VerticalStackLayout Spacing="16">
                        <Label Text="Özellikler" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="#111827" />
                        
                        <!-- Feature List -->
                        <VerticalStackLayout Spacing="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Frame Grid.Column="0" 
                                       BackgroundColor="#DC2626" 
                                       WidthRequest="32" 
                                       HeightRequest="32" 
                                       CornerRadius="16" 
                                       Padding="0"
                                       HasShadow="False">
                                    <Label Text="💻" 
                                           FontSize="16" 
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Center" />
                                </Frame>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" Margin="12,0,0,0">
                                    <Label Text="Windows 10/11 Desteği" 
                                           FontSize="14" 
                                           FontAttributes="Bold"
                                           TextColor="#111827" />
                                    <Label Text="USB NFC okuyucular ile tam uyumluluk" 
                                           FontSize="12" 
                                           TextColor="#6B7280" />
                                </VerticalStackLayout>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Frame Grid.Column="0" 
                                       BackgroundColor="#EA580C" 
                                       WidthRequest="32" 
                                       HeightRequest="32" 
                                       CornerRadius="16" 
                                       Padding="0"
                                       HasShadow="False">
                                    <Label Text="📱" 
                                           FontSize="16" 
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Center" />
                                </Frame>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" Margin="12,0,0,0">
                                    <Label Text="Mobil Platform Desteği" 
                                           FontSize="14" 
                                           FontAttributes="Bold"
                                           TextColor="#111827" />
                                    <Label Text="Android ve iOS native NFC" 
                                           FontSize="12" 
                                           TextColor="#6B7280" />
                                </VerticalStackLayout>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Frame Grid.Column="0" 
                                       BackgroundColor="#F97316" 
                                       WidthRequest="32" 
                                       HeightRequest="32" 
                                       CornerRadius="16" 
                                       Padding="0"
                                       HasShadow="False">
                                    <Label Text="🔒" 
                                           FontSize="16" 
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Center" />
                                </Frame>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" Margin="12,0,0,0">
                                    <Label Text="AES Şifre Çözme" 
                                           FontSize="14" 
                                           FontAttributes="Bold"
                                           TextColor="#111827" />
                                    <Label Text="Güvenli veri işleme ve doğrulama" 
                                           FontSize="12" 
                                           TextColor="#6B7280" />
                                </VerticalStackLayout>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Frame Grid.Column="0" 
                                       BackgroundColor="#DC2626" 
                                       WidthRequest="32" 
                                       HeightRequest="32" 
                                       CornerRadius="16" 
                                       Padding="0"
                                       HasShadow="False">
                                    <Label Text="⚡" 
                                           FontSize="16" 
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Center" />
                                </Frame>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" Margin="12,0,0,0">
                                    <Label Text="Otomatik Algılama" 
                                           FontSize="14" 
                                           FontAttributes="Bold"
                                           TextColor="#111827" />
                                    <Label Text="Kart yaklaştırıldığında anında okuma" 
                                           FontSize="12" 
                                           TextColor="#6B7280" />
                                </VerticalStackLayout>
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Modern Bottom Navigation -->
        <Frame Grid.Row="1" 
               BackgroundColor="White" 
               HasShadow="True" 
               Padding="16,12" 
               CornerRadius="24,24,0,0"
               Opacity="0.95">
            <HorizontalStackLayout Spacing="0" HorizontalOptions="FillAndExpand">
                
                <!-- Home -->
                <Button BackgroundColor="Transparent" 
                        Text="🏠"
                        FontSize="24" 
                        TextColor="#DC2626"
                        Padding="12" 
                        HorizontalOptions="FillAndExpand"
                        Clicked="OnHomeClicked" />
                
                <!-- Search -->
                <Button BackgroundColor="Transparent" 
                        Text="🔍" 
                        FontSize="24" 
                        TextColor="#6B7280" 
                        Padding="12" 
                        HorizontalOptions="FillAndExpand"
                        Clicked="OnSearchClicked" />
                
                <!-- Add -->
                <Button BackgroundColor="Transparent" 
                        Text="➕" 
                        FontSize="24" 
                        TextColor="#6B7280" 
                        Padding="12" 
                        HorizontalOptions="FillAndExpand"
                        Clicked="OnAddClicked" />
                
                <!-- Settings -->
                <Button BackgroundColor="Transparent" 
                        Text="⚙️" 
                        FontSize="24" 
                        TextColor="#6B7280" 
                        Padding="12" 
                        HorizontalOptions="FillAndExpand"
                        Clicked="OnBookmarkClicked" />
                
                <!-- User -->
                <Button BackgroundColor="Transparent" 
                        Text="👤" 
                        FontSize="24" 
                        TextColor="#6B7280" 
                        Padding="12" 
                        HorizontalOptions="FillAndExpand"
                        Clicked="OnUserClicked" />
                
            </HorizontalStackLayout>
        </Frame>

    </Grid>

</ContentPage>