<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiNfcReader.MainPage"
             Title=""
             BackgroundColor="#FEF2F2">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Background Gradient -->
        <Rectangle Grid.RowSpan="2">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FEFCE8" Offset="0.0" />
                    <GradientStop Color="#FEF3C7" Offset="0.5" />
                    <GradientStop Color="#FED7AA" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Ana İçerik -->
        <ScrollView Grid.Row="0" Padding="16">
            <VerticalStackLayout Spacing="20">
                
                <!-- Header with ANEF Logo -->
                <Frame BackgroundColor="White" 
                       Padding="20,16" 
                       HasShadow="True" 
                       CornerRadius="16"
                       Opacity="0.95">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- ANEF Logo -->
                        <Image Grid.Column="0"
                               Source="aneflogo.jpg"
                               WidthRequest="60"
                               HeightRequest="60"
                               Aspect="AspectFit"
                               VerticalOptions="Center"
                               Margin="0,0,16,0"/>
                        
                        <!-- Header Text -->
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label FontSize="26" 
                                   FontAttributes="Bold" 
                                   HorizontalOptions="Start">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="ANEF " TextColor="#7C2D12"/>
                                        <Span Text="NFC Okuyucu" TextColor="#111827"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label Text="Anadolu Elazığlılar Federasyonu" 
                                   FontSize="14" 
                                   TextColor="#6B7280" 
                                   HorizontalOptions="Start" />
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Status Card -->
                <Frame BackgroundColor="White" 
                       Padding="20" 
                       HasShadow="True" 
                       CornerRadius="16"
                       Opacity="0.9">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Bağlantı Durumu" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="#111827" />
                        
                        <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                            <BoxView x:Name="BackendStatusDot" 
                                     WidthRequest="16" 
                                     HeightRequest="16" 
                                     CornerRadius="8" 
                                     Color="#EF4444" />
                            <Label x:Name="BackendStatusText" 
                                   Text="Backend bağlantısı kontrol ediliyor..." 
                                   FontSize="14" 
                                   TextColor="#374151" />
                            <Button x:Name="RecycleBtn"
                                    Text="🔄"
                                    FontSize="16"
                                    BackgroundColor="Transparent"
                                    TextColor="#6B7280"
                                    Padding="8"
                                    CornerRadius="8"
                                    Clicked="OnRecycleBackendClicked"
                                    ToolTipProperties.Text="Backend'e yeniden bağlan" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Action Buttons -->
                <VerticalStackLayout Spacing="12">
                    
                    <!-- Connect Backend Button -->
                    <Button x:Name="ConnectBackendBtn"
                            Text="🌐 Backend'e Bağlan"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="60"
                            CornerRadius="16"
                            Clicked="OnConnectBackendClicked"
                            HorizontalOptions="Fill"
                            Shadow="{Shadow Brush=#7C2D12, Offset='0,4', Radius=8, Opacity=0.3}">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#7C2D12" Offset="0.0" />
                                <GradientStop Color="#92400E" Offset="1.0" />
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.TextColor>White</Button.TextColor>
                    </Button>

                    <!-- Start NFC Reader Button -->
                    <Button x:Name="StartNfcBtn"
                            FontSize="16"
                            FontAttributes="Bold"
                            BackgroundColor="White"
                            TextColor="#7C2D12"
                            HeightRequest="60"
                            CornerRadius="16"
                            Clicked="OnStartClicked"
                            HorizontalOptions="Fill"
                            BorderColor="#7C2D12"
                            BorderWidth="2"
                            Shadow="{Shadow Brush=#E5E7EB, Offset='0,2', Radius=6, Opacity=0.2}">
                        <Button.Text>📡 NFC Okuyucuyu Başlat</Button.Text>
                    </Button>
                    
                </VerticalStackLayout>

                <!-- Features Card -->
                <Frame BackgroundColor="White" 
                       Padding="20" 
                       HasShadow="True" 
                       CornerRadius="16"
                       Opacity="0.9">
                    <VerticalStackLayout Spacing="16">
                        <Label Text="Özellikler" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="#111827" />
                        
                        <!-- Feature List -->
                        <VerticalStackLayout Spacing="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Frame Grid.Column="0" 
                                       BackgroundColor="#7C2D12" 
                                       WidthRequest="36" 
                                       HeightRequest="36" 
                                       CornerRadius="18" 
                                       Padding="0"
                                       HasShadow="True">
                                    <Label Text="💻" 
                                           FontSize="18" 
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Center" />
                                </Frame>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" Margin="12,0,0,0">
                                    <Label Text="Windows 10/11 Desteği" 
                                           FontSize="14" 
                                           FontAttributes="Bold"
                                           TextColor="#111827" />
                                    <Label Text="USB NFC okuyucular ile tam uyumluluk" 
                                           FontSize="12" 
                                           TextColor="#6B7280" />
                                </VerticalStackLayout>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Frame Grid.Column="0" 
                                       BackgroundColor="#92400E" 
                                       WidthRequest="36" 
                                       HeightRequest="36" 
                                       CornerRadius="18" 
                                       Padding="0"
                                       HasShadow="True">
                                    <Label Text="📱" 
                                           FontSize="18" 
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Center" />
                                </Frame>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" Margin="12,0,0,0">
                                    <Label Text="Mobil Platform Desteği" 
                                           FontSize="14" 
                                           FontAttributes="Bold"
                                           TextColor="#111827" />
                                    <Label Text="Android ve iOS native NFC" 
                                           FontSize="12" 
                                           TextColor="#6B7280" />
                                </VerticalStackLayout>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Frame Grid.Column="0" 
                                       BackgroundColor="#B45309" 
                                       WidthRequest="36" 
                                       HeightRequest="36" 
                                       CornerRadius="18" 
                                       Padding="0"
                                       HasShadow="True">
                                    <Label Text="🔒" 
                                           FontSize="18" 
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Center" />
                                </Frame>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" Margin="12,0,0,0">
                                    <Label Text="AES Şifre Çözme" 
                                           FontSize="14" 
                                           FontAttributes="Bold"
                                           TextColor="#111827" />
                                    <Label Text="Güvenli veri işleme ve doğrulama" 
                                           FontSize="12" 
                                           TextColor="#6B7280" />
                                </VerticalStackLayout>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Frame Grid.Column="0" 
                                       BackgroundColor="#D97706" 
                                       WidthRequest="36" 
                                       HeightRequest="36" 
                                       CornerRadius="18" 
                                       Padding="0"
                                       HasShadow="True">
                                    <Label Text="⚡" 
                                           FontSize="18" 
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Center" />
                                </Frame>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" Margin="12,0,0,0">
                                    <Label Text="Otomatik Algılama" 
                                           FontSize="14" 
                                           FontAttributes="Bold"
                                           TextColor="#111827" />
                                    <Label Text="Kart yaklaştırıldığında anında okuma" 
                                           FontSize="12" 
                                           TextColor="#6B7280" />
                                </VerticalStackLayout>
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Modern Bottom Navigation -->
        <Frame Grid.Row="1" 
               BackgroundColor="White" 
               HasShadow="True" 
               Padding="20,16" 
               CornerRadius="28,28,0,0"
               Opacity="0.98">
            <HorizontalStackLayout Spacing="0" HorizontalOptions="FillAndExpand">
                
                <!-- Home -->
                <VerticalStackLayout HorizontalOptions="FillAndExpand" Spacing="4">
                    <Button BackgroundColor="Transparent" 
                            Text="🏠"
                            FontSize="28" 
                            TextColor="#7C2D12"
                            Padding="8" 
                            HorizontalOptions="Center"
                            Clicked="OnHomeClicked" />
                    <Label Text="Ana Sayfa" 
                           FontSize="10" 
                           TextColor="#7C2D12" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
                
                <!-- Settings -->
                <VerticalStackLayout HorizontalOptions="FillAndExpand" Spacing="4">
                    <Button BackgroundColor="Transparent" 
                            Text="⚙️" 
                            FontSize="28" 
                            TextColor="#6B7280" 
                            Padding="8" 
                            HorizontalOptions="Center"
                            Clicked="OnBookmarkClicked" />
                    <Label Text="Ayarlar" 
                           FontSize="10" 
                           TextColor="#6B7280"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
                
                <!-- User -->
                <VerticalStackLayout HorizontalOptions="FillAndExpand" Spacing="4">
                    <Button BackgroundColor="Transparent" 
                            Text="👤" 
                            FontSize="28" 
                            TextColor="#6B7280" 
                            Padding="8" 
                            HorizontalOptions="Center"
                            Clicked="OnUserClicked" />
                    <Label Text="Profil" 
                           FontSize="10" 
                           TextColor="#6B7280"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
                
            </HorizontalStackLayout>
        </Frame>

    </Grid>

</ContentPage>